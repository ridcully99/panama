<html>
	<head>
		<title>Panama Examples - Issues</title>
		<link rel="stylesheet" href="../simple.css" type="text/css">
	</head>
	<body>
		<div style="float:left"><a href="edit">Create Issue...</a></div>
		<div style="float:right">
			<form method="post" action="$issuetable.searchLink('title','description')">
				<input type="text" name="q" value="$!issuetable.filters.searchfilter" />
				<input type="submit" name="search" value="Search" />
			</form>
		</div>
		<table>
			<tr>
				<th><a href="$issuetable.sortLink("id")">ID</a></th>
				<th><a href="$issuetable.sortLink("createdAt")">created at</a></th>
				<th><a href="$issuetable.sortLink("title")">Title</a></th>
				<th></th>
			</tr>
			#foreach($issue in $issuetable.rows)
			<tr>
				<td>$issue.id</td>
				<td>$issue.createdAt</td>
				<td>$issue.title</td>
				<td><a href="edit?id=$issue.id">edit</a> | <a href="delete?id=$issue.id">delete</a></td>
			</tr>
			#end
		</table>
	</body>
</html>