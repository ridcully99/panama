<html>
<head>
	<title>Panama Examples - Guestbook</title>
	<link rel="stylesheet" href="../simple.css" type="text/css">
</head>
<body>
  #set($examplename="Guestbook")
  #parse("/panama/examples/exampleheader.vm")

  <form name="fm" method="POST" action="add">
    Add your comment here:
    <p>
    <textarea name="text">Your comment goes here.</textarea>
	</p>
    <input type="submit" value="Submit" />
  </form>
  <p></p>
  <table>
	<tr>
		<th>Date</th>
		<th>Comment</th>
	</tr>
    #foreach($entry in $guestbookentries.rows)
	<tr>
		<td>$entry.date</td>
		<td>$entry.text</td>
	</tr>
    #end
  </table>
</body>
</html>
