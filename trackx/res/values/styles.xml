<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- for large main buttons -->
    <style name="LargeButton">
		<item name="android:textSize">24dp</item>
		<item name="android:textStyle">normal</item>
    </style>

	<!-- for large numbers -->
    <style name="LargeNumber">
		<item name="android:textSize">36dp</item>
		<item name="android:textScaleX">1</item>
		<item name="android:textStyle">normal</item>
		<item name="android:layout_marginBottom">-9dp</item>
		<item name="android:textColor">#eeeeee</item>
    </style>
    
	<!-- for medium numbers -->
    <style name="MediumNumber">
		<item name="android:textSize">24dp</item>
		<item name="android:textScaleX">1</item>
		<item name="android:textStyle">normal</item>
		<item name="android:layout_marginBottom">-6dp</item>
		<item name="android:textColor">#eeeeee</item>
    </style>    

	<!-- for labels below numbers -->
    <style name="NumberLabel">
		<item name="android:textSize">11dp</item>
		<item name="android:textColor">#cccccc</item>
    </style>


</resources>